{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  // https://docs.renovatebot.com/configuration-options/#extends
  "extends": [
    // https://docs.renovatebot.com/config-presets/#grouporganization-level-presets
    // https://github.com/edgarrmondragon/.github/blob/main/renovate/python.json5
    "edgarrmondragon/.github//renovate/python.json5",

    // https://docs.renovatebot.com/presets-default/#automergepatch
    ":automergePatch",
  ],

  // https://docs.renovatebot.com/modules/manager/copier
  "copier": {
    "enabled": false
  },

  // https://docs.renovatebot.com/configuration-options/#platformautomerge
  "platformAutomerge": true,

  // https://docs.renovatebot.com/configuration-options/#packagerules
  "packageRules": [
    {
      "matchPackageNames": ["singer-sdk"],
      "groupName": "Singer SDK",
      "automerge": false,
    },
  ],
}
